# Instant Instance Operation - Environment Configuration
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_INSTANCE_TYPE=t3.xlarge
AWS_AMI_ID=ami-021589336d307b577
AWS_KEY_PAIR_NAME=your-key-pair-name
AWS_SECURITY_GROUP_ID=sg-xxxxxxxxxxxxxxxxx
AWS_SUBNET_ID=subnet-xxxxxxxxxxxxxxxx

# Docker Configuration
DOCKER_IMAGE=betashow/video-generation-api:latest

# API Configuration
API_TIMEOUT_MINUTES=10
API_REQUEST_TIMEOUT_SECONDS=180

# Output Configuration
RESULTS_DIR=/Users/your-username/instant_test_results

# Performance Configuration
INSTANCE_STARTUP_TIMEOUT_SECONDS=600
DOCKER_PULL_TIMEOUT_MINUTES=5

# Optional: Authentication Key for Secure Mode (leave empty for default mode)
# VIDEO_API_AUTH_KEY=your-auth-key-here